@model ElGantte.Models.Partner

@{
    ViewData["Title"] = "Detalles del Partner";
}

<div class="container py-5">
    <div class="row justify-content-center g-4">
        <!-- Tarjeta principal -->
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white rounded-top">
                    <h4 class="mb-0">@Model.Nombre</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4 fw-bold text-muted">Nombre</dt>
                        <dd class="col-sm-8">@Model.Nombre</dd>

                        <dt class="col-sm-4 fw-bold text-muted">Dirección</dt>
                        <dd class="col-sm-8">@Model.Direccion</dd>

                        <dt class="col-sm-4 fw-bold text-muted">Tipo</dt>
                        <dd class="col-sm-8">@(Model.Tipo ? "Partner" : "Cliente")</dd>

                        <dt class="col-sm-4 fw-bold text-muted">Fecha de Registro</dt>
                        <dd class="col-sm-8">@Model.FechaRegistro.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4 fw-bold text-muted">Correo</dt>
                        <dd class="col-sm-8">@Model.Correo</dd>

                        <dt class="col-sm-4 fw-bold text-muted">Teléfono</dt>
                        <dd class="col-sm-8">@Model.Telefono</dd>

                        <dt class="col-sm-4 fw-bold text-muted">Notas</dt>
                        <dd class="col-sm-8">@Model.Notas</dd>

                        <dt class="col-sm-4 fw-bold text-muted">Último Cambio</dt>
                        <dd class="col-sm-8">@Model.FechaCambio?.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4 fw-bold text-muted">Account Manager</dt>
                        <dd class="col-sm-8">@Model.AccountManager</dd>
                    </dl>
                </div>
            </div>
        </div>

        <!-- Tarjeta de integraciones -->
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-secondary text-white rounded-top">
                    <h5 class="mb-0">Integraciones en curso</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.Integraciones != null && ((List<ElGantte.Models.Integracione>)ViewBag.Integraciones).Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>Modelo de Terminal</th>
                                        <th>Estado</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var integracion in (List<ElGantte.Models.Integracione>)ViewBag.Integraciones)
                                    {
                                        <tr>
                                            <td>
                                                <a asp-controller="Integraciones" asp-action="Details" asp-route-id="@integracion.Id"
                                                   class="btn btn-sm btn-outline-primary">
                                                    @integracion.ModeloTerminalNavigation.Modelo
                                                </a>
                                            </td>
                                            <td>
                                                <span class="badge @(integracion.Certificado == true ? "bg-success" : "bg-warning text-dark")">
                                                    @(integracion.Certificado == true ? "Certificado" : "Integrando")
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-0">Este partner no tiene integraciones activas.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Botones de acción -->
    <div class="text-center mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary me-2">
            <i class="bi bi-pencil"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Volver al inicio
        </a>
    </div>
</div>
