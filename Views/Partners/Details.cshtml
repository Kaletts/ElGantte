@model ElGantte.Models.Partner

@{
    ViewData["Title"] = "Detalles del Partner";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Tarjeta principal -->
            <div class="card shadow-sm mb-4">
                

                    <h4 class="mb-0">@Model.Nombre</h4>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Nombre</dt>
                        <dd class="col-sm-8">@Model.Nombre</dd>

                        <dt class="col-sm-4">Dirección</dt>
                        <dd class="col-sm-8">@Model.Direccion</dd>

                        <dt class="col-sm-4">Tipo</dt>
                        <dd class="col-sm-8">@(Model.Tipo ? "Partner" : "Cliente")</dd>

                        <dt class="col-sm-4">Fecha de Registro</dt>
                        <dd class="col-sm-8">@Model.FechaRegistro.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4">Correo</dt>
                        <dd class="col-sm-8">@Model.Correo</dd>

                        <dt class="col-sm-4">Teléfono</dt>
                        <dd class="col-sm-8">@Model.Telefono</dd>

                        <dt class="col-sm-4">Notas</dt>
                        <dd class="col-sm-8">@Model.Notas</dd>

                        <dt class="col-sm-4">Último Cambio</dt>
                        <dd class="col-sm-8">@Model.FechaCambio?.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4">Account Manager</dt>
                        <dd class="col-sm-8">@Model.AccountManager</dd>
                    </dl>
                </div>
            </div>
        </div>

        <!-- Tarjeta de integraciones -->
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">Integraciones en curso</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.Integraciones != null && ((List<ElGantte.Models.Integracione>)ViewBag.Integraciones).Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Modelo de Terminal</th>
                                        <th>Estado</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var integracion in (List<ElGantte.Models.Integracione>)ViewBag.Integraciones)
                                    {
                                        <tr>
                                            <td>
                                                <a asp-controller="Integraciones" asp-action="Details" asp-route-id="@integracion.Id" class="btn btn-sm btn-primary">
                                                    @integracion.ModeloTerminalNavigation.Modelo
                                                </a>
                                            </td>
                                            <td class="@(integracion.Certificado == true ? "bg-success text-white" : "bg-warning text-dark")">
                                                @(integracion.Certificado == true ? "Certificado" : "Integrando")
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-0">Este partner no tiene integraciones activas.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Botones de acción -->
    <div class="text-center">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-primary me-2">Editar</a>
        <a asp-action="Index" class="btn btn-outline-secondary">Volver al inicio</a>
    </div>
</div>

<style>
    body {
        background: #f8f9fa;
    }

    .card {
        border-radius: 12px;
    }

    .table th, .table td {
        vertical-align: middle;
    }
</style>
