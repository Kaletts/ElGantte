@model ElGantte.Models.Partner

@{
    ViewData["Title"] = "Create";
}

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow p-4 w-75">
        <div class="row g-3">
            <div class="col-md-7">
                <h2 class="mb-3">Crear nuevo Partner</h2>
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                    <div class="mb-3">
                        <label asp-for="Nombre" class="form-label"></label>
                        <input asp-for="Nombre" class="form-control" required />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Direccion" class="form-label"></label>
                        <input asp-for="Direccion" class="form-control" />
                        <span asp-validation-for="Direccion" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Tipo" class="form-label">Tipo</label>
                        <select asp-for="Tipo" class="form-select">
                            <option value="true">Partner</option>
                            <option value="false">Cliente</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label asp-for="FechaRegistro" class="form-label"></label>
                        <input asp-for="FechaRegistro" class="form-control" required type="date" id="fechaInicio" max="" />
                        <span asp-validation-for="FechaRegistro" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Correo" class="form-label"></label>
                        <input asp-for="Correo" class="form-control" required type="email" />
                        <span asp-validation-for="Correo" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Telefono" class="form-label"></label>
                        <input asp-for="Telefono" class="form-control" />
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Notas" class="form-label"></label>
                        <textarea asp-for="Notas" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Notas" class="text-danger"></span>
                    </div>

                    <input asp-for="FechaCambio" hidden id="fechaCambio" />

                    <div class="mb-3">
                        <label asp-for="AccountManager" class="form-label"></label>
                        <input asp-for="AccountManager" class="form-control" />
                        <span asp-validation-for="AccountManager" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 mt-3">
                        <input type="submit" value="Crear" class="btn btn-success" />
                        <a asp-action="Index" class="btn btn-outline-primary">Volver al inicio</a>
                    </div>
                </form>
            </div>

            <div class="col-md-5 d-flex justify-content-center align-items-center">
                <svg width="200" height="200" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M12 2L12 22M2 12L22 12" stroke="#0d6efd" stroke-width="2" stroke-linecap="round" />
                    <circle cx="12" cy="12" r="10" stroke="#0d6efd" stroke-width="2" />
                </svg>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const now = new Date();
        const madridTime = new Date(now.toLocaleString("en-US", { timeZone: "Europe/Madrid" }));

        const day = String(madridTime.getDate()).padStart(2, '0');
        const month = String(madridTime.getMonth() + 1).padStart(2, '0');
        const year = madridTime.getFullYear();

        const formattedDate = `${year}-${month}-${day}`;

        const fechaInicio = document.getElementById("fechaInicio");
        fechaInicio.value = formattedDate;
        fechaInicio.max = formattedDate;

        const fechaCambio = document.getElementById("fechaCambio");
        if (fechaCambio) {
            fechaCambio.value = formattedDate;
        }
    });
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
