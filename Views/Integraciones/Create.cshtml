@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            new TomSelect("#partnerSelect", {
                placeholder: "Buscar Partner...",
                create: false,
                allowEmptyOption: true
            });
        });
    </script>
}